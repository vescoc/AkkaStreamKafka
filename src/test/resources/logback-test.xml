<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="sample" level="debug"/>

  <root level="warn">
    <appender-ref ref="stdout"/>
  </root>
</configuration>
